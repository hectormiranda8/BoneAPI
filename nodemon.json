{
  "watch": [
    "*.js",
    "src/**/*.js",
    "routes/**/*.js",
    "controllers/**/*.js",
    "models/**/*.js",
    "middleware/**/*.js",
    "config/**/*.js",
    "utils/**/*.js"
  ],
  "ignore": [
    "node_modules/**",
    "test/**",
    "tests/**",
    "*.test.js",
    "*.spec.js",
    ".git",
    "logs/**",
    "*.log"
  ],
  "ext": "js,json",
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "verbose": false,
  "execMap": {
    "js": "node"
  },
  "delay": 1000
}
